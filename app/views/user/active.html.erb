<% if @vehicle.nil? %>
    <div class="d-flex flex-column align-items-center">
    <h2 class="text-center">"Good news! There are currently no pending or active rental agreements associated with your account."</h2>
    <img src="https://plus.unsplash.com/premium_photo-1669814665525-1d23d8717672?q=80&w=3368&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" id="great-job-img" />
    </div>
<% else %>
    <div class="rental-agreement">
        <%= render partial:'shared/rental_agreement', locals:{ vehicle: @vehicle } %>
        <div class="text-center"><%= button_to "Return Vehicle", end_active_agreement_path, method: :post ,class:"btn btn-lg btn-success w-75" %></div>
    </div>
<% end %>